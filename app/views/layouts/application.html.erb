    <link href="/public/main.css" rel="stylesheet">

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
    <script type="text/javascript" src="jquery.sticky.js"></script>
    <script>    $(window).load(function(){
      $("#header").sticky({ topSpacing: 0 });
    });
 </script>
  </head>

  <body class='body'>
     <% if user_signed_in? %>
     <div class="scrol">
     <div class="container-fluid">
     <div class="navback">
      <div class="navbars-top">

        <div class="row">

          <div class="col-xs-11">
            <div class="navbar-header">
              <ul class="nav nav-pills">
                <li role="presentation" class=""><%= link_to 'Все статьи', articles_path(@articles) %></li>
                <li role="presentation"><%= link_to 'Новая статья', new_article_path(@article) %></li>
                <li role="presentation"><%= link_to 'Terms', terms_path %></li>
                <li role="presentation"><%= link_to 'About', about_path %></li>
                <li role="presentation"><%= link_to 'Профиль', user_root_path %></li>
                <li role="presentation"><%= link_to 'Обратная связь', contacts_path %></li>

                <% if current_user[:username] == 'karamalesa' %>
                  <li role="presentation"><%= link_to 'Админка',  rails_admin_path %> </li>
                <% end %> 

                <li role="presentation"><%= link_to 'Выйти', destroy_user_session_path, method: :delete %></li>
              </ul>
              
            </div>
          </div>
          

          <div class="col-xs-1">
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <%= link_to user_root_path, id: "navbar-dropdown", :class => "nav-link dropdown-toggle", data: { toggle: "dropdown" }, aria: { haspopup: true, expanded: false } do %>
                  <%= image_tag user_avatar(current_user, 30), :class => "rounded-circle" %>
                <% end %>
                <div id="color-link">
                <div class="dropdown-menu">
                <% if current_user.admin? %>
                    <%= link_to "Admin Area", rails_admin_path, :class => "dropdown-item" %>
                <% end %>
                  <%= link_to 'Settings', edit_user_registration_path, :class => "dropdown-item" %>
                  <div class="dropdown-divider"></div>
                  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "dropdown-item" %>
                </div>
                </div>
              </li>
            </ul>
          </div> 

        </div>
      </div>
      </div>
    </div>
</div>


     
            
            
               
              
