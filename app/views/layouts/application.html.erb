          <nav class="navbar navbar-default">
            <div class="container-fluid">
               <div class="navbar-header">
                  <ul class="nav nav-pills">
                    <li role="presentation" class=""><%= link_to 'Зарегистрироваться', new_user_registration_path, :class => 'btn btn-warning' %></li>
                    <li role="presentation"><%= link_to 'Войти', new_user_session_path, :class => 'btn btn-success' %></li>
