<!DOCTYPE html>
<html>
  <head>
    <title>BlogLesson34</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link data-require="bootstrap@*" data-semver="4.1.3" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <script data-require="bootstrap@*" data-semver="4.1.3" src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    
  </head>

  <body>


    <div class="container">
      
      
        
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          
          
          <div class="row">
            <% if user_signed_in? %>
            <div class="col-xs-8 col-md-8 col-sm-8">
               <p>
                  <%= link_to 'Все статьи', articles_path(@articles) %>   |
                  <%= link_to 'Новая статья', new_article_path(@article) %>   | 
                  <%= link_to 'Terms', terms_path %>   |
                  <%= link_to 'About', about_path %>   |
                  <%= link_to 'Профиль', user_root_path %>
                  <% if current_user[:username] == 'karamalesa' %>
                  | <%= link_to 'Админка',  rails_admin_path %>
                  <% end %>
               </p>
            </div>  
            <div class="col-xs-3 col-md-3 col-sm-3">
              <span>Здравствуйте, <%= current_user.username %> </span>
            </div> 
            <div class="col-xs-1 col-md-1 col-sm-1">  
                <%= link_to 'Выйти', destroy_user_session_path, method: :delete %>
              
            
            </div><!--col-->

          <% else %>
          
          <div class="col-xs-8 col-md-8 col-sm-8">
          </div>
          <div class="col-xs-4 col-md-4 col-sm-4">  
          

            <%= link_to 'Войти', new_user_session_path, :class => 'btn btn-success' %> или
            

            <%= link_to 'Зарегистрироваться', new_user_registration_path, :class => 'btn btn-warning' %>
            
          </div> 
          
          <% end %>
          
           </div><!--row-->

          <%= yield %>

      
   
  </div> <!-- container-->
  </body>
</html>
