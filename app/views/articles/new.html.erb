<h1>New Article</h1>

<%= form_for :article, url: articles_path do |f| %>

	
	<p>
		
		<%= f.label :title %><br>
		<%= f.text_field :title, :class => 'form-control' %>
	</p>
	<p>
		
		<%= f.label :text %><br>
		<%= f.text_area :text, :class => 'form-control' %>
	</p>
	<p>
		
		<%= f.submit "Опубликовать", :class => 'btn btn-primary' %>
	</p>
<% end %>
