<!DOCTYPE html>
<html>
  <head>
    <title>BlogLesson34</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link data-require="bootstrap@*" data-semver="4.1.3" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <script data-require="bootstrap@*" data-semver="4.1.3" src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <link href="/public/main.css" rel="stylesheet">
  </head>

  <body>
     <% if user_signed_in? %>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <ul class="nav nav-pills">
                 <li role="presentation" class=""><%= link_to 'Все статьи', articles_path(@articles) %></li>
                 <li role="presentation"><%= link_to 'Новая статья', new_article_path(@article) %></li>
                 <li role="presentation"><%= link_to 'Terms', terms_path %></li>
                 <li role="presentation"><%= link_to 'About', about_path %></li>
                 <li role="presentation"><%= link_to 'Профиль', user_root_path %></li>
                 <li role="presentation"><%= link_to 'Обратная связь', contacts_path %></li>
                 <% if current_user[:username] == 'karamalesa' %>
                   <li role="presentation"><%= link_to 'Админка',  rails_admin_path %> </li>
                 <% end %> 
                 <li role="presentation"><%= link_to 'Выйти', destroy_user_session_path, method: :delete %></li>
              </ul>

        </div>
        <h2>Здравствуйте, <%= current_user.username %></h2>
          
      </div>
    </nav>



     
            
            
               
              
