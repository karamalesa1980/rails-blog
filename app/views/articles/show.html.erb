

<h2>
	<%= @article.title %>
</h2>

<hr>

<p>
	<%= @article.text %>
</p>

<hr>

<p>
	Дата публикации:  <%= @article.created_at%>
</p>
<p>
	<%= link_to 'Все статьи', articles_path(@articles) %> |
	<%= link_to 'Редактировать', edit_article_path(@article) %> |
	<%= link_to 'Удалить', article_path(@article), method: :delete, data: { confirm: 'Вы уверены?'} %> 
</p>

<h2>
	Добавить коментарий!
</h2>

<%= form_for([@article, @article.comments.build]) do |f| %>
	
	<p>
		
		<%= f.label :author %><br>
		<%= current_user.username %>
	</p>
	<p>
		
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>
	<p>
		
		<%= f.submit "Опубликовать" %>
	</p>
<% end %>



<% @article.comments.each do |comment| %>
	<p>
		<i><%= comment.author %>: прокомнтировал(а)</i>
	</p>
	<p>
		
		<%= comment.body %>
	</p>
	<p>
		<%= comment.created_at %>
	</p>
	<hr>
<% end %>