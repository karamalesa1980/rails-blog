<h1>New Article</h1>

<%= form_for :article, url: articles_path do |f| %>

	<p>
		
		<%= f.label :author %>:
		<% if user_signed_in? %>
		<%= current_user.username  %>
		<% end %>
	</p>
	<p>
		
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>
	<p>
		
		<%= f.submit "Опубликовать" %>
	</p>
<% end %>
